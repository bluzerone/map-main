@import '~swiper/swiper-bundle';

body
  padding: 0;
  margin: 0;
  height: 100vh;
  font-family: 'Montserrat', sans-serif;

html
  overflow: hidden;
  font-family: "Montserrat";

/* полоса прокрутки (скроллбар) */
::-webkit-scrollbar {
    width: 4px;
    height: 0px;
    background-color: #14386100;
    border-radius: 50px;
}

/* ползунок скроллбара */
::-webkit-scrollbar-thumb {
    background-color: #e5e5e5;
    border-radius: 50px;
    transition: all 200ms ease;
}

::-webkit-scrollbar-thumb:hover {
    background-color: #9d9d9d;
}

::-webkit-scrollbar-button:vertical:start:decrement {
    display: none;
}

::-webkit-scrollbar-button:vertical:end:increment {
    display: none;
}

.font-weight-bold
  color: #000000 !important;

.swiper-slide
  display: flex;
  align-items: center;
  justify-content: center;

.swiper-button-next
  color: #fff;
  margin-right: 20px;

.swiper-button-prev
  color: #fff;
  margin-left: 20px;

.error-dialog-red
  background: red;
  color: #fff;

.success-dialog-red
  background: #37a937;
  color: #fff;

.ymaps-2-1-78-float-button-text
  display: none;
