.registration__container
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  height: 100%;

.company__formation__container
  width: 640px;
  height: 670px;
  border-radius: 10px;
  background: #fff;
  box-shadow: 0px 0px 20px #0000002e;
  z-index: 99999;
  position: relative;
  overflow: auto;

.close__icon
  width: 30px;
  position: absolute;
  right: 23px;
  top: 25px;
  cursor: pointer;

.close__icon:focus
  outline: none;

.registration__title
  margin-top 70px
  margin-left: 55px;
  font-family: "Montserrat", semibold;
  font-weight: 600;
  font-size: 18px;
  margin-bottom: 30px

.company__formation__row
  width: 100%;
  display: flex;
  justify-content: space-between;

.company__formation__col
  width: 60%;
  padding: 10px 35px;

.company__formation__second__col
  width: 40%;
  padding: 10px 0px;

.second__col__text__hint
  font-size 10px
  color: #a6a6a6
  margin-top: 87px;
  margin-bottom: 0px

.second__col__time__hint
  font-size 10px
  color: #a6a6a6
  margin-top 120px

.add__phone__btn
  color: #3975ce;
  font-size: 12px;
  font-family: "Montserrat";
  text-decoration: underline;
  margin-top 45px

.text__input
  font-family: "Montserrat";
  font-size: 12px;
  height: 45px;
  width: 330px;
  border: 1px solid #dfdfdf;
  outline: none;
  border-radius: 10px;
  padding-left: 20px;
  cursor: pointer;
  font-weight: 500;
  margin-bottom: 20px

.text__input::placeholder
  color: #a6a6a6

.add__photo__row
  display: flex;
  justify-content: space-between;
  align-items: center;

.add__photo__btn
  display: flex;
  align-items: center;
  margin-left: 35px

.add__photo__link
  padding-left: 10px
  color: #3975ce;
  font-size: 12px;
  font-family: "Montserrat";
  text-decoration: underline;

.add__photo__hint
  width 230px
  font-size 10px
  color: #a6a6a6
  margin-right: 50px

.submit__row
  display flex
  margin-top 40px

.submit__btn
  color: #3975ce;
  font-size: 14px;
  font-family: "Montserrat";
  border: 1px solid #3975ce;
  border-radius: 10px;
  padding: 15px 15px;
  margin-left 35px
  width: fit-content;
  display: flex;
  align-items: center;

.cancel__btn
  color: #a6a6a6;
  font-size: 14px;
  font-family: "Montserrat";
  border: 1px solid #a6a6a6;
  border-radius: 10px;
  padding: 15px 15px;
  margin-left 35px
  width: fit-content;
  display: flex;
  align-items: center;

.privacy__text
  color: #a7a3a3;
  font-size: 8px;
  line-height: 12px;
  width 295px
  margin-left 35px
  margin-top: 0px;
  margin-bottom: 0px;

.privacy__text__btn
  color: #3975ce;

.bottom__links__row
  display flex
  justify-content: space-between;
  margin-top 15px
  margin-bottom: 15px;

.bottom__links__container
  display: flex;
  flex-direction: column;
  margin-left 35px
  color: #3975ce;
  font-size: 12px;
  font-family: "Montserrat";
  text-decoration: underline;

.bottom__links__second__container
    margin-right 35px
    display: flex;
    align-items: center;
    color: #3975ce;
    font-size: 12px;
    font-family: "Montserrat";
    text-decoration: underline;

.bottom__link
  margin-top 5px

.toggle__msg__wait
  width: 320px;
  height: 300px;
  border-radius: 10px;
  background: #fff;
  box-shadow: 0px 0px 20px #0000002e;
  z-index: 99999;
  position: relative;
  display: none;
  .close__icon
    right: 13px;
    top: 15px;
  .toggle__msg__wait__title
    padding-top: 60px;
    margin-bottom 30px
    font-family: "Montserrat", semibold;
    font-weight: 600;
    font-size: 18px;
    text-align: center;
    margin-top: 0;
  .toggle__msg__wait__text
      text-align: center;
      font-size 12px
      color: #a6a6a6
      margin-bottom 45px
      margin-left: 50px;
      width 225px
  .toggle__msg__wait__close__btn
    text-align: center;
    color: #3975ce;
    font-size: 16px;
    font-family: "Montserrat";
    text-decoration: underline;

.toggle__msg__succes
  width: 320px;
  height: 300px;
  border-radius: 10px;
  background: #fff;
  box-shadow: 0px 0px 20px #0000002e;
  z-index: 99999;
  position: relative;
  display: none;
  .close__icon
    right: 13px;
    top: 15px;
  .toggle__msg__succes__title
    padding-top: 60px;
    margin-bottom 30px
    font-family: "Montserrat", semibold;
    font-weight: 600;
    font-size: 18px;
    text-align: center;
    margin-top: 0;
  .toggle__msg__succes__text
      text-align: center;
      font-size 12px
      color: #a6a6a6
      margin-left: 50px;
      width 219px
      margin-bottom: 0
      span
        font-size 12px
        font-weight: 400;
        color: #000
        line-height 30px
      .toggle__msg__succes__close__btn
        margin-top 40px

  .toggle__msg__succes__close__btn
    text-align: center;
    color: #3975ce;
    font-size: 16px;
    font-family: "Montserrat";
    text-decoration: underline;

.toogle__container
  position: relative;
  margin-left: 45px;
  height: 670px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;

.error__msg
  font-size: 12px;
  font-family: "Montserrat";
  color: #f00;
  margin-top: 0;
