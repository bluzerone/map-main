.company__data__row
  display flex

.company__data__col
  width 50%

.company__data__col__right
  width 50%
  display flex
  flex-direction: column;
  align-items: flex-end;
  overflow: auto;
  max-height: 660px

.branches__row
  display flex
  margin-bottom: 25px

.branch__btn
  padding-right 30px
  font-size 10px
  font-family: "Montserrat";
  text-decoration: underline;
  color: #aeaeae
  margin: 0
  cursor: pointer;

.active
  color: #000

.company__address
  font-size 16px
  margin: 0
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  max-width: 100%
  font-family: "Montserrat";
  font-weight: 500;

.company__address__clarification
  font-size 12px
  color: #aeaeae
  margin: 0
  padding-top 5px
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  max-width: 100%
  font-family: "Montserrat";

.schedule__table
  display flex
  margin-top 30px

.schedule__col
  width 30px

.day__name
  font-size 12px
  font-family: "Montserrat";
  color: #5fb414
  margin: 0

// В графике работы, если день выходной вешается класс day__off

.day__off
  color: #b41414
  margin: 0

.day__off__working__time
  font-size 10px
  margin: 0

.start__working__time
  font-size 10px
  margin: 0
  font-family: "Montserrat";

.end__working__time
  font-size 10px
  margin: 0
  font-family: "Montserrat";

.telephone__numbers__row
  display flex
  flex-direction: column;
  margin-top 25px

.main__number
  font-size 14px
  margin 0px

.second__number
  font-size 14px
  margin 0px

.telephone__line__working__time
  font-size 12px
  color: #aeaeae
  margin 0
  padding-top 5px
  font-family: "Montserrat";

.contact__links__row
  margin-top 25px
  margin-bottom 25px
  display -webkit-flex
  display -ms-flex
  display flex
  flex-direction: column;

.address__link
  font-size 14px
  color: #aeaeae
  margin 0
  padding-bottom 7.5px
  padding-top: 7.5px
  max-width: 100%
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  font-family: "Montserrat";
  a
    color: #000
    cursor: pointer;
    text-decoration: none;

.editing__btn
  color: #3975ce;
  font-size: 14px;
  font-family: "Montserrat";
  border: 1px solid #3975ce;
  border-radius: 10px;
  padding: 15px 15px;
  width: fit-content;
  margin-bottom 15px
  cursor: pointer;

.editing__hint
  font-size: 8px;
  font-family: "Montserrat";
  color: #aeaeae
  line-height: 1.3;

.company__current__img
  width: 287px;
  height: 220px;
  border-radius: 8px
  margin-bottom 10px
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  background-color: #e0e0e047;
  display: flex;
  align-items: center;
  text-align: center;

.small__img__container
  display flex
  flex-wrap: wrap;
  width: 287px;

.photo__wrapper
  width: 71px;
  height: 71px;

.input__file
  width: 72px;
  height: 72px;

.company__img__small
  width 70px
  height 70px
  border-radius: 8px
  margin 1px
  cursor: pointer;
  background-repeat: no-repeat;
  background-position: center;
  background-size: cover;
  background-color: rgba(224,224,224,0.278)

progress
  width: 90%;
  margin-bottom: 5px;

.success__upload__foto__text
  font-family: "Montserrat";
  margin: 0 0 5px 32px;
  color: #218c21;
  font-size: 12px;

.empty__photo
    color: #989393;
    font-family: "Montserrat";
    font-size: 12px;
